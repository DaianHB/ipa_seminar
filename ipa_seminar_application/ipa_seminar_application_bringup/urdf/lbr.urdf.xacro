<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="lbr" >

  <!-- common stuff -->
  <xacro:include filename="$(find cob_description)/urdf/common.xacro" />
  <xacro:include filename="$(find cob_description)/urdf/materials.urdf.xacro" />
  <xacro:include filename="$(find schunk_description)/urdf/pg70/pg70.urdf.xacro" />

  <!-- lbr -->
  <xacro:include filename="$(find cob_description)/urdf/lbr/lbr.urdf.xacro" />

  <link name="world"/>
  
  <joint name="world_joint" type="fixed">
    <origin xyz="0 0 0.5" rpy="0 0 0" />
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <!-- foot for arm -->
  <link name="base_link">
	<visual>
	  <origin xyz="0 0 0.5" rpy="0 0 0" />
	  <geometry>
		<box size="2 2 1"/>
	  </geometry>
	  <material name="IPA/LightGrey" />
	</visual>

	<collision>
	  <origin xyz="0 0 0.5" rpy="0 0 0" />
	  <geometry>
		<box size="2 2 1"/>
	  </geometry>
	</collision>
  </link>

  <!-- arm -->
  <xacro:cob_lbr name="arm" parent="base_link">
    <origin xyz="0 0 1" rpy="0 0 0" />
  </xacro:cob_lbr>

  <!-- gripper -->
  <xacro:schunk_pg70 name="gripper" parent="arm_7_link">
      <origin xyz="0 0 0.02" rpy="0 0 0" />
  </xacro:schunk_pg70>

  <gazebo>
    <plugin name="ros_control" filename="libgazebo_ros_control.so">
      <!--robotNamespace>/</robotNamespace-->
      <!--robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType-->
    </plugin>
  </gazebo>

</robot>
