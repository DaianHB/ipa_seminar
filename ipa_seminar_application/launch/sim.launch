<?xml version="1.0"?>
<launch>

	<arg name="robot"/>

    <!-- upload script server parameters -->
    <rosparam command="load" ns="/script_server/arm" file="$(find ipa_seminar_application)/config/arm_joint_configurations_$(arg robot).yaml"/>

    <!-- launch an empty world -->
    <include file="$(find gazebo_worlds)/launch/empty_world.launch" />

    <!-- send lwa urdf to param server -->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find ipa_seminar_application)/helper/$(arg robot).urdf.xacro'" />

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_gazebo_model" pkg="gazebo" type="spawn_model" args="-urdf -param robot_description -model arm -z 0.01 " respawn="false" output="screen" />

	<!-- Controller Manager -->
	<include file="$(find cob_controller_configuration_gazebo)/ros/launch/controller_manager.launch" />

    <!-- arm controllers -->
    <rosparam file="$(find ipa_seminar_application)/helper/arm_controller_$(arg robot).yaml" command="load"/>
    <node name="arm_controller_spawner" pkg="cob_controller_configuration_gazebo" type="spawner" args="arm_controller" />
    <group ns="arm_controller">
            <node name="arm_joint_trajectory_action_node" pkg="joint_trajectory_action" type="joint_trajectory_action" />
    </group>

	<!-- teleop -->
    <include file="$(find schunk_bringup)/tools/teleop.launch" />

</launch>
